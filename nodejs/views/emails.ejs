<% inherits('layout') %>

<div class="container mt-5">
  <h1 class="mb-4">
    Emails
  </h1>

  <table class="table mb-4">
    <thead>
      <tr>
        <th>ID</th>
        <th>From Address</th
        <th>To Address</th>
        <th>Subject</th>
        <th>HTML</th>
        <th>Text</th>
        <th>Created At</th>
      </tr>
    </thead>

    <tbody>
      <% data.items.forEach(email => { %>
        <tr>
          <td>
            <%= email.id %>
          </td>

          <td>
            <%= email.from_address %>
          </td>

          <td>
            <%= email.to_address %>
          </td>

          <td>
            <%= email.html %>
          </td>

          <td>
            <%= email.text %>
          </td>

          <td>
            <%= email.created_at %>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <% if (page > 1) { %>
    <a href="/emails?page=<%= page - 1 %>" class="btn btn-primary mr-2">
      Previous
    </a>
  <% } %>

  <% if ((data.metadata.count - (page * 10)) > 0) { %>
    <a href="/emails?page=<%= page + 1 %>" class="btn btn-primary">
      Next
    </a>
  <% } %>
</div>
