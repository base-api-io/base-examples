<% inherits('layout') %>

<div class="container mt-5">
  <div class="mb-4 d-flex align-items-center">
    <h1 class="mr-auto">
      Forms
    </h1>

    <a class="btn btn-primary" href="/forms/create">
      Create a Form
    </a>
  </div>

  <table class="table mb-4">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Created At</th>
      </tr>
    </thead>

    <tbody>
      <% data.items.forEach((form) => { %>
        <tr>
          <td>
            <%= form.id %>
          </td>

          <td>
            <a href="/forms/<%= form.id %>">
              <%= form.name %>
            </a>
          </td>

          <td>
            <%= form.created_at %>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <% if (page > 1) { %>
    <a href="/forms?page=<%= page - 1 %>" class="btn btn-primary mr-2">
      Previous
    </a>
  <% } %>

  <% if ((data.metadata.count - (page * 10)) > 0) { %>
    <a href="/forms?page=<%= page + 1 %>" class="btn btn-primary">
      Next
    </a>
  <% } %>
</div>
