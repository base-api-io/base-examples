extends layout.pug

block content
  .container.mt-5
    h1.mb-4 Image Details

    table.table
      thead
        tr
          th Name
          th Value
      tbody
        tr
          td ID
          td= image.id
        tr
          td Name
          td= image.name
        tr
          td Width
          td= image.width
        tr
          td Height
          td= image.height
        tr
          td Size
          td= image.size
        tr
          td Created At
          td= image.created_at

    form(method="POST", action="/images/" + image.id + "/delete")
      button.btn.btn-danger Delete File

    h4.mt-5 Response
    .card.bg-light
      .card-body
        pre
          code
            = JSON.stringify(image, null, "  ")
