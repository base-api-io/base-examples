<% inherits('layout') %>

<div class="container mt-5">
  <h1 class="mb-4">
    Images
  </h1>

  <table class="table mb-4">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Width</th>
        <th>Height</th>
        <th>Size</th>
        <th>Created At</th>
      </tr>
    </thead>

    <tbody>
      <% data.items.forEach((image) => { %>
        <tr>
          <td>
            <%= image.id %>
          </td>

          <td>
            <a href="/images/<%= image.id %>">
              <%= image.name %>
            </a>
          </td>

          <td>
            <%= image.width %>
          </td>

          <td>
            <%= image.height %>
          </td>

          <td>
            <%= image.size %>
          </td>

          <td>
            <%= image.created_at %>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <% if (page > 1) { %>
    <a href="/images?page=<%= page - 1 %>" class="btn btn-primary mr-2">
      Previous
    </a>
  <% } %>

  <% if ((data.metadata.count - (page * 10)) > 0) { %>
    <a href="/images?page=<%= page + 1 %>" class="btn btn-primary">
      Next
    </a>
  <% } %>
</div>
