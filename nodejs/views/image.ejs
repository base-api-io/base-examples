<% inherits('layout') %>

<div class="container mt-5">
  <h1 class="mb-4">
    Image Details
  </h1>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Value</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td>ID</td>
        <td>
          <%= image.id %>
        </td>
      </tr>

      <tr>
        <td>Size</td>
        <td>
          <%= image.size %>
        </td>
      </tr>

      <tr>
        <td>Width</td>
        <td>
          <%= image.width %>
        </td>
      </tr>

      <tr>
        <td>Height</td>
        <td>
          <%= image.height %>
        </td>
      </tr>

      <tr>
        <td>Created At</td>
        <td>
          <%= image.created_at %>
        </td>
      </tr>
    </tbody>
  </table>

  <form method="POST" action="/images/<%= image.id %>/delete">
    <button class="btn btn-danger">
      Delete Image
    </button>
  </form>

  <h4 class="mt-5">Response</h4>

  <div class="card bg-light">
    <div class="card-body">
      <pre><code><%= JSON.stringify(image, null, "  ") %></code></pre>
    </div>
  </div>
</div>
