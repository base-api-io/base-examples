<% inherits('layout') %>

<div class="container mt-5">
  <h1>Update User</h1>

  <% if (error) { %>
    <div class="alert alert-danger">
      <%= error %>
    </div>
  <% } %>

  <form method="POST" action="/users/<%= id %>">
    <div class="form-group">
      <label for="email">
        Email address
      </label>

      <input
        value="<%= email %>"
        placeholder="Enter email"
        class="form-control"
        type="email"
        name="email"
        id="email"
      />
    </div>

    <div class="form-group">
      <label for="custom_data">
        Custom Data
      </label>

      <textarea
        placeholder="Custom Data"
        class="form-control"
        name="custom_data"
        id="custom_data"><%= JSON.stringify(custom_data, null, "  ") %></textarea>
    </div>

    <button class="btn btn-primary" type="submit">Submit</button>
  </form>
</div>
